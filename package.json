{
  "name": "querio",
  "version": "1.0.0",
  "description": "A modern TypeScript ORM for PostgreSQL with strict typing and fluent API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:integration": "jest tests/repository.integration.test.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "example:db": "ts-node examples/db.ts",
    "example:usage": "ts-node examples/usage.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit",
    "prepare": "pnpm build"
  },
  "packageManager": "pnpm@8.0.0",
  "keywords": [
    "orm",
    "typescript",
    "postgresql",
    "query-builder"
  ],
  "author": "Querio Team",
  "license": "MIT",
  "dependencies": {
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
